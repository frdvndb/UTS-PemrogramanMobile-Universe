<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/gambar_universe"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/judul_universe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/gambar_universe"
            android:layout_toRightOf="@id/gambar_universe"
            android:text="Judul"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/deskripsi_universe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/judul_universe"
            android:layout_toEndOf="@id/gambar_universe"
            android:layout_toRightOf="@id/gambar_universe"
            android:text="Deskripsi Singkat"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:maxLines="3"
            android:ellipsize="end" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
